<div class="container">
  <form action="/restaurants/{{shop._id}}?_method=PUT" method="POST">
    <div class="mb-2">
      <label for='name' class="form-label">店名</label>
      <input type='text' class="form-control" id='name' placehoder='OO餐廳' name='name' value='{{shop.name}}' required>
    </div>

    <div class="mb-2">
      <label for='name_en' class="form-label">英文店名</label>
      <input type='text' id='name_en' class="form-control" placehoder='OO restaurant' name='name_en' value='{{shop.name_en}}' required>
    </div>

    <div class="mb-2" class="form-group">
      <label for='category' class="form-label">類別</label>
      <input type='text' id='category' class="form-control" placehoder='日本料理' name='category' value='{{shop.category}}' list="categoryLists" required>
      <datalist id="categoryLists">
          <option>美式</option>
          <option>咖啡</option>
          <option>中東料理</option>
          <option>日本料理</option>
          <option>義式餐廳</option>
      </datalist>
    </div>

    <div class="mb-2">
      <label for="image" class="form-label">圖片連結</label>
      <input type="url" class="form-control" id="image" name="image" value="{{shop.image}}" required>
    </div>

    <div class="mb-2">
      <label for="location" class="form-label">地址</label>
      <input type="text" class="form-control" id="location" placeholder="縣市區段路街號樓" name="location"
        value="{{shop.location}}" required>
    </div>

    <div class="mb-2">
      <label for="phone" class="form-label">電話</label>
      <input type="tel" class="form-control" id="phone" placeholder="00-0000000" name="phone"
        value="{{shop.phone}}" required>
    </div>

    <div class="mb-2">
      <label for="google_map" class="form-label">Google地圖連結</label>
      <input type="url" class="form-control" id="google_map" name="google_map" value="{{shop.google_map}}"
        required>
    </div>

    <div class="mb-2">
      <label for="rating" class="form-label">評分</label>
      <input type="number" class="form-control" id="rating" min="0" max="5" step="0.1" name="rating"
        value="{{shop.rating}}" required>
    </div>

    <div class="mb-2">
      <label for="description" class="form-label">敘述</label>
      <textarea class="form-control" id="description" rows="3" name="description"
        required>{{shop.description}}</textarea>
    </div>

    <div class="text-center mb-2">
      <button type="submit" class="btn btn-info">
        儲存修改
      </button>
      <a href="/">
        <button type="button" class="btn btn-secondary">
          返回首頁
        </button>
      </a>
      <button type="reset" class="btn btn-danger">還原輸入</button>
    </div>

  </form>
</div>



