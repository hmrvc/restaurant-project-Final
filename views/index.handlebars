<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <h4 class="mb-2">尋找餐廳：</h4>
      <div class="row justify-content-between">
        <div class="col-4">
          <form action="/search">
            
            <div class="input-group">
              <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
                value="{{keyword}}" aria-describedby="search-button">
              <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
              </div>
            </div>
          </form>
        </div>
        <div class="col-4">
          <div class="input-group">
            <select class="form-control" id="sort" name="sort">
              <option>A > Z</option>
              <option>Z > A</option>
              <option>類別</option>
              <option>地區</option>
            </select>
          </div>
        </div>
      </div>  


    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each shops}}
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}"
              alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="card-foot d-flex justify-content-end m-2">
              
              <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" class="d-flex justify-content-center">
                <a href="./restaurants/{{this._id}}/edit" class="px-1"><i class="fas fa-edit"></i></a>
                <a href="./restaurants/{{this._id}}" class="px-1"><i class="fas fa-align-justify"></i></a>
                <button id="deletebtn" type="submit" class="px-1"><i class="fas fa-trash text-primary "></i></button>
              </form>
            </div>
          </div>
        
        {{/each}}
      </div>
    </div>
  </div>
</div>